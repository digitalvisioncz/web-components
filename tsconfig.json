{
    "extends": "@atomico/tsconfig/base.json",
    "compilerOptions": {
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true, 
      "types": ["vite/client", "jest"],
      "plugins": [
          {
            "name": "typescript-plugin-css-modules"
          }
      ]
    },
    "include": [
      "components/src/**/*",
      ".eslintrc.cjs",
      "components/vite.config.js",
      "docs/.vitepress/**/*",
      ".storybook/**/*",
      "stories/**/*",
  ],
}
